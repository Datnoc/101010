# ============================================
# Mambu API Configuration
# ============================================
MAMBU_BASE_URL=https://your-instance.mambu.com
MAMBU_API_KEY=your-mambu-api-key-here
MAMBU_TENANT_ID=your-tenant-id

# ============================================
# Alpaca Markets API Configuration
# ============================================
# Paper Trading (Test) için: https://paper-api.alpaca.markets
# Live Trading için: https://api.alpaca.markets
ALPACA_BASE_URL=https://paper-api.alpaca.markets
ALPACA_API_KEY=your-alpaca-api-key
ALPACA_SECRET_KEY=your-alpaca-secret-key

# Alpaca Broker API (Opsiyonel - Müşteri oluşturma, KYC için)
ALPACA_BROKER_API_URL=https://broker-api.sandbox.alpaca.markets
ALPACA_BROKER_API_KEY=your-broker-api-key
ALPACA_BROKER_SECRET_KEY=your-broker-secret-key

# Alpaca Market Data API (Opsiyonel - Market verileri için)
ALPACA_MARKET_DATA_URL=https://data.alpaca.markets
ALPACA_MARKET_API_KEY=your-market-data-api-key
ALPACA_MARKET_DATA_SECRET_KEY=your-market-data-secret-key

# ============================================
# Stripe Payment Configuration
# ============================================
# Stripe Dashboard'dan alabilirsiniz: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ============================================
# Twilio SMS Configuration (Opsiyonel)
# ============================================
# Twilio hesabı oluşturup telefon numarası satın almanız gerekiyor
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# Redis Configuration (Opsiyonel)
# ============================================
# SMS kodlarını saklamak için Redis kullanılabilir
# REDIS_URL=redis://localhost:6379
# veya
# REDIS_URL=redis://username:password@host:port

